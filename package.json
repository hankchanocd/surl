{
  "name": "surl-cli",
  "version": "1.1.1",
  "description": "URL shortener CLI",
  "main": "surl.js",
  "scripts": {
    "test": "npm run build; mocha --timeout 6000",
    "prebuild": "rimraf ./build",
    "build": "babel ./src -d ./build",
    "coverage-check": "istanbul cover -x *.test.js _mocha -- -R spec test/test.js",
    "coverage-report": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && codecov"
  },
  "bin": {
    "surl": "./build/surl.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hankchanocd/surl-cli.git"
  },
  "keywords": [
    "shortenUrl",
    "surl",
    "url",
    "cli",
    "bit.ly",
    "firebase",
    "goo.gl"
  ],
  "author": "Hank Chan <hankchanth@icloud.com> (https://github.com/hankchanocd)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hankchanocd/surl-cli/issues"
  },
  "homepage": "https://github.com/hankchanocd/surl-cli#readme",
  "dependencies": {
    "bitly": "^6.0.8",
    "chalk": "^2.4.1",
    "clipboardy": "^1.2.3",
    "cliui": "^4.1.0",
    "columnify": "^1.5.4",
    "commander": "^2.16.0",
    "conf": "^1.4.0",
    "inquirer": "^5.2.0",
    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "expect.js": "^0.3.1",
    "ghooks": "^2.0.4",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test"
    }
  }
}
